@using Hybrid.Zero.IdentityServer4.Quickstart.Views.Shared.Components.TopBarLanguageSwitch

@inject Microsoft.Extensions.Options.IOptions<Hybrid.Core.Options.HybridOptions> options

@if (User.Identity.IsAuthenticated)
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            @await Component.InvokeAsync(typeof(TopBarLanguageSwitchViewComponent))

            <li class="dropdown">
                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button">
                    <i class="" title="@User.Identity.Name"></i>
                    <span>@L("Hello") @User.Identity.Name!</span>
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu pull-right">
                    @if (options.Value.Quartz.IsEnabled)
                    {
                        <li>
                            <a asp-area="Quartz" asp-controller="Dashboard" asp-action="Index" class="btn btn-link navbar-btn navbar-link">@L("QuartzCenter")</a>
                        </li>
                    }
                    <li style="text-align:center;">
                        <button type="submit" class="btn btn-link navbar-btn navbar-link">@L("LogOut")</button>
                    </li>
                </ul>
            </li>
        </ul>
    </form>
}
else
{
    <form method="get" id="loginForm" class="navbar-right" onsubmit="return false;">
        <ul class="nav navbar-nav navbar-right">
            @await Component.InvokeAsync(typeof(TopBarLanguageSwitchViewComponent))

            <li class="dropdown">
                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button">
                    <i class="" title="§Ó"></i>
                    <span>@L("Welcome")</span>
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu pull-right">
                    @if (options.Value.Quartz.IsEnabled)
                    {
                        <li>
                            <a asp-area="Quartz" asp-controller="Dashboard" asp-action="Index" class="btn btn-link navbar-btn navbar-link">@L("QuartzCenter")</a>
                        </li>
                    }
                    <li>
                        <a asp-area="" asp-controller="Account" asp-action="Login" asp-route-returnurl="@Context.Request.Path" class="btn btn-link navbar-btn navbar-link">@L("LogIn")</a>
                    </li>
                </ul>
            </li>
        </ul>
    </form>
}