
@model Hybrid.Zero.IdentityServer4.Quickstart.SetPasswordViewModel
@{
    ViewData["Title"] = L("Title");
}

<h4>@L("SubTitle")</h4>
@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)

<div class="alert alert-info" role="alert">
    @L("Info")
</div>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPassword">@L("NewPassword")</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">@L("ConfirmPassword")</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@L("SetPassword")</button>
        </form>
    </div>
</div>
