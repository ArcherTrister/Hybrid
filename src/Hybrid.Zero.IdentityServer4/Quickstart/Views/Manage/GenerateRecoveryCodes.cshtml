
@{
    ViewData["Title"] = L("Title");
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning" role="alert">
    <p>
        <span class="fa fa-exclamation-triangle"></span>
        <strong>@L("SubTitle")</strong>
    </p>
    <p>
        @L("LostInfo")
    </p>
    <p>
        @L("GenerateRecoveryCodeInfo") <a asp-action="ResetAuthenticatorWarning">@L("ResetKeys")</a>
    </p>
</div>

<div>
    <form asp-action="GenerateRecoveryCodes" method="post" class="form-group">
        <button class="btn btn-danger" type="submit">@L("GenerateCodes")</button>
    </form>
</div>
