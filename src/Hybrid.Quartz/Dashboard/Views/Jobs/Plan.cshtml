@{
    ViewData["Title"] = "Plan";
}

<!-- jobs start -->
<div class="row">
    <div class="col-md-3 col-lg-2">
        <partial name="_SideBar" />
    </div>
    <div class="col-md-9 col-lg-10">
        <h2 class="page-header">@L("Plan")</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@L("JobGroup")</th>
                    <th>@L("JobName")</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <tr repeat.for="job of jobs">
                    <td>${job.group}</td>
                    <td>${job.name}</td>
                    <td>
                        <a route-href="route: job-details; params.bind: { id: id, group: job.group, name: job.name }">@L("Details")</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>